<script setup>
	import {
		reactive,
		ref,
		watch
	} from 'vue'
	const router = uni.$Router
	const route = uni.$Route
	
	watch(route,(value)=>{
		console.log(`nvue -index 页面 监听 route 成功`)
		console.log(value)
	})
	

	function goToPage(index,useNative = false,option) {
		const toggleMap = [{
			native: `navigateTo`,
			plugin: `push`
		}, {
			native: `switchTab`,
			plugin: `pushTab`
		}, {
			native: `redirectTo`,
			plugin: `replace`
		}, {
			native: `reLaunch`,
			plugin: `replaceAll`
		}]
		const {
			native,
			plugin
		} = toggleMap[index]
		let api = uni[native]
		if (!useNative) {
			api = router[plugin]
		}
		api(option)
	}
</script>

