							}"
				/>
			</uni-list>
		</uni-section>
		
		<uni-section title="插件跳转方式" type="line" class="margin-top-sm">
			<uni-list>
				<uni-list-item
					title="静态地址跳转到新nvue页面" 
					showArrow :clickable="true"
					:show-extra-icon="true"
					@click="goToPage(0,false,`/nvue/static/child`)"
					:extra-icon="{
